<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Your Legendary Game</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Game", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (!User.Identity.IsAuthenticated) {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Tag", "Index", "Tag")</li>
                                <li>@Html.ActionLink("O Meu Perfil", "Index", "Perfil")</li>
                                <li>@Html.ActionLink("Pedidos", "Index", "Ask")</li>
                                @*<li>@Html.ActionLink("Humor", "Index", "Humor")</li>*@
                                <li>@Html.ActionLink("Missião", "Index", "Mission")</li>
                                @*<li>@Html.ActionLink("TagRelation", "Index", "TagRelation")</li>
                                <li>@Html.ActionLink("Jogos", "Index", "Game")</li>
                                <li>@Html.ActionLink("Estados", "Index", "State")</li>*@
                                <li>@Html.ActionLink("Introduções", "Index", "Introdution")</li>
                                <li>@Html.ActionLink("Amigos", "Index", "RelationShip")</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - The Legend </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
