@model IEnumerable<TheLegend.Models.Ask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <p>
            Os meus Pedidos
        </p>
    </tr>
    <tr>
        <th>
            @Html.DisplayName("A Quem Pedi")
        </th>
        <th>
            @Html.DisplayName("Chegar a")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.UserOriginId == WebSecurity.GetUserId(User.Identity.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAsk.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDestin.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AskId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AskId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AskId })
                </td>
            </tr>
        }
    }

</table>

<table>
    <tr>
        <p>
            Pedidos Por Tratar
        </p>
    </tr>
    <tr>
        <th>
            @Html.DisplayName("Pedido feito por")
        </th>
        <th>
            @Html.DisplayName("Chegar a ")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.UserAskId == WebSecurity.GetUserId(User.Identity.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserOrigin.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDestin.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AskId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AskId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AskId }) |
                    @Html.ActionLink("Responder", "Responder", new { id = item.AskId })
                </td>
            </tr>
        }
    }

</table>